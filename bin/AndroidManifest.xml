<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cs356"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.cs356.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cs356.ScoreboardUI"
            android:label="@string/title_activity_scoreboard_ui"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.cs356.DummyTester"
            android:label="@string/title_activity_dummy_tester" >
        </activity>
        <activity
            android:name="com.example.cs356.ScoreboardList"
            android:label="@string/title_activity_scoreboard_list" >
        </activity>
        <activity
            android:name="com.example.cs356.Tournament" >
        </activity>
        <activity
            android:name="com.example.cs356.CreateTournament" >
        </activity>  
        <activity
            android:name="com.example.cs356.ScoreList"
            android:label="@string/title_activity_score_list"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
    </application>

</manifest>
